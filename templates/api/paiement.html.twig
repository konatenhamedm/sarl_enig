{% extends 'base.html.twig' %}


{% block body %}
{% include '_includes/header.html.twig' %}

    <div class="container " style="margin-top: 10rem;margin-bottom: 5rem">
        <div class="col-md-6 offset-md-3 p-3 border border-warning rounded">
            <form action="https://secure.sycapay.net/checkresponsive" id="paiementForm" class="form" method="post">
                <input type="hidden" class="form-control" name="token" value="{{ data.token }}">
                <input type="hidden" class="form-control" name="amount" value="{{ data.amount }}"> 
                <input type="hidden" class="form-control" name="currency" value="{{ data.currency }}" readonly> 
                <input type="hidden" class="form-control" name="urls" value="{{ data.urls }}"> 
                <input type="hidden" class="form-control" name="urlc" value="{{ data.urlc }}"> 
                <input type="hidden" class="form-control" name="commande" value="{{ data.commande }}"> 
                <input type="hidden" class="form-control" name="merchandid" value="{{ data.merchandid}}"> 
                <input type="hidden" class="form-control" name="typpaie" id="typpaie" value="{{ data.typepaie }}"> 

                <div class="form-group">
                    <label class="text-uppercase">Reservation NÂ°</label>
                    <input type="text" class="form-control" value="{{ data.commande }}" readonly> 
                </div>
                <div class="form-group">
                    <label class="text-uppercase">Montant</label>
                    <input type="text" class="form-control" value="{{ data.amount|number_format(0, ',', ' ') }} XOF" readonly> 
                </div>
                <div class="form-group">
                    <label class="text-uppercase">Devise</label>
                    <input type="text" class="form-control" value="{{ data.currency }}" readonly> 
                </div>
                <div class="form-group">
                    <button class="btn btn-warning btn-block" type="submit">Confirmer</button>
                </div>
                
            </form>
        </div>
    </div>

    {% include '_includes/footer.html.twig' %}

{% endblock %}

